<title>DFTB+</title>
<runtype>openmp</runtype>
<outputdir>True</outputdir>
<versionprefix>dftb</versionprefix>
<filecheck>dftb_in.hsd</filecheck>
<stdout>dftb_out.log</stdout>

<fileexts>
   <e>dftb_in.hsd</e>
   <e>dftb_pin.hsd</e>
   <e>dftb_out.log</e>
   <e>charges.bin</e>
   <e>geo_end.xyz</e>
   <e>geo_end.gen</e>
   <e>results.tag</e>
   <e>detailed.out</e>
   <e>detailed.xml</e>
   <e>autotest.tag</e>
   <e>hessian.out</e>
   <e>band.out</e>
   <e>md.out</e>
   <e>EXC.DAT</e>
   <e>TRA.DAT</e>
   <e>SPX.DAT</e>
   <e>XCH.DAT</e>
   <e>XREST.DAT</e>
   <e>COEF.DAT</e>
   <e>XplusY.DAT</e>
   <e>TDP.DAT</e>
   <e>ARPACK.DAT</e>
   <e>TEST_ARPACK.DAT</e>
</fileexts>

<filevars>
   <e key='dftbin'>dftb_in.hsd</e>
</filevars>

<inputfiles>
   <e>dftb_in.hsd</e>
   <e>charges.bin</e>
</inputfiles>

<outputfiles>
   <e>dftb_pin.hsd</e>
   <e>dftb_out.log</e>
   <e>geo_end.xyz</e>
   <e>geo_end.gen</e>
   <e>results.tag</e>
   <e>detailed.out</e>
   <e>detailed.xml</e>
   <e>autotest.tag</e>
   <e>hessian.out</e>
   <e>band.out</e>
   <e>md.out</e>
   <e>EXC.DAT</e>
   <e>TRA.DAT</e>
   <e>SPX.DAT</e>
   <e>XCH.DAT</e>
   <e>XREST.DAT</e>
   <e>COEF.DAT</e>
   <e>XplusY.DAT</e>
   <e>TDP.DAT</e>
   <e>ARPACK.DAT</e>
   <e>TEST_ARPACK.DAT</e>
</outputfiles>

<prescript>
   <e>sed -ri 's,(^|[{;])\s*OutputPrefix\s*=\s*"[^"]*"\s*($|[;}]),\1\2,I' $dftbin</e>
</prescript>
