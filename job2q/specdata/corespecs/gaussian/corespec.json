{
    "packagekey": "g",
    "packagename": "Gaussian",
    "parallelization": "openmp",
    "makejobdir": "True",
    "filecheck": "gjf or com",
    "fileclash": "gjf and com",
    "filenames": {
        "com": "job.com",
        "gjf": "job.gjf",
        "log": "job.log",
        "chk": "job.chk",
        "wfn": "job.wfn",
        "cub": "job.cub",
        "oldchk": "job.oldchk"
    },
    "filevars": {
        "com": "com",
        "gjf": "gjf",
        "chk": "chk",
        "oldchk": "oldchk"
    },
    "inputfiles": [
        "gjf|com",
        "oldchk"
    ],
    "outputfiles": [
        "gjf|com",
        "log",
        "chk",
        "wfn",
        "cub"
    ],
    "positionargs": [
        "gjf|com"
    ],
    "profile": [
        "export GAUSS_SCRDIR=$workdir"
    ],
    "prescript": [
        "sed -i \"/^%/d\" @($gjf|$com)",
        "sed -i \"1i%Chk=$chk\\\\n%NProcShared=${ncore}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
        "sed -i \"/--Link1--/a%Chk=$chk\\\\n%NProcShared=${ncore}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
        "test -f $oldchk && sed -i \"1i%OldChk=$oldchk\" @($gjf|$com)"
    ],
    "formatkeys": [
        "title",
        "method",
        "basis",
        "pseudo",
        "charge",
        "spin",
        "solvent"
    ]
}