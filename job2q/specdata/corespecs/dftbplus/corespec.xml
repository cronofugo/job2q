<spec>

<packagekey>plus</packagekey>
<packagename>DFTB+</packagename>
<parallelization>openmp</parallelization>
<makejobdir>True</makejobdir>
<filecheck>dftb_in.hsd</filecheck>
<stdout>dftb_out.log</stdout>

<filenames>
   <e key='dftb_in.hsd'>dftb_in.hsd</e>
   <e key='dftb_pin.hsd'>dftb_pin.hsd</e>
   <e key='dftb_out.log'>dftb_out.log</e>
   <e key='charges.bin'>charges.bin</e>
   <e key='geo_end.xyz'>geo_end.xyz</e>
   <e key='geo_end.gen'>geo_end.gen</e>
   <e key='results.tag'>results.tag</e>
   <e key='detailed.out'>detailed.out</e>
   <e key='detailed.xml'>detailed.xml</e>
   <e key='autotest.tag'>autotest.tag</e>
   <e key='hessian.out'>hessian.out</e>
   <e key='band.out'>band.out</e>
   <e key='md.out'>md.out</e>
   <e key='EXC.DAT'>EXC.DAT</e>
   <e key='TRA.DAT'>TRA.DAT</e>
   <e key='SPX.DAT'>SPX.DAT</e>
   <e key='XCH.DAT'>XCH.DAT</e>
   <e key='XREST.DAT'>XREST.DAT</e>
   <e key='COEF.DAT'>COEF.DAT</e>
   <e key='XplusY.DAT'>XplusY.DAT</e>
   <e key='TDP.DAT'>TDP.DAT</e>
   <e key='ARPACK.DAT'>ARPACK.DAT</e>
   <e key='TEST_ARPACK.DAT'>TEST_ARPACK.DAT</e>
</filenames>

<filevars>
   <e key='dftbin'>dftb_in.hsd</e>
</filevars>

<inputfiles>
   <e>dftb_in.hsd</e>
   <e>charges.bin</e>
</inputfiles>

<outputfiles>
   <e>dftb_in.hsd</e>
   <e>charges.bin</e>
   <e>dftb_pin.hsd</e>
   <e>dftb_out.log</e>
   <e>geo_end.xyz</e>
   <e>geo_end.gen</e>
   <e>results.tag</e>
   <e>detailed.out</e>
   <e>detailed.xml</e>
   <e>autotest.tag</e>
   <e>hessian.out</e>
   <e>band.out</e>
   <e>md.out</e>
   <e>EXC.DAT</e>
   <e>TRA.DAT</e>
   <e>SPX.DAT</e>
   <e>XCH.DAT</e>
   <e>XREST.DAT</e>
   <e>COEF.DAT</e>
   <e>XplusY.DAT</e>
   <e>TDP.DAT</e>
   <e>ARPACK.DAT</e>
   <e>TEST_ARPACK.DAT</e>
</outputfiles>

<prescript>
   <e>sed -ri 's,(^|[{;])\s*OutputPrefix\s*=\s*"[^"]*"\s*($|[;}]),\1\2,I' $dftbin</e>
</prescript>

</spec>
