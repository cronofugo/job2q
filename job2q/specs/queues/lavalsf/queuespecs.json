{
   "schedulername": "Lava LSF",
   "submitcmd": [ "bsub" ],
   "statcmd": [ "bjobs", "-ostat", "-noheader" ],
   "submitre": ".*<([0-9]+)>.*",
   "statre": "(.+)",

   "jobname": "#BSUB -J '{job}'",

   "metadata": [
      "#BSUB -P '{packagename}'"
   ],

   "logfiles": [
      "#BSUB -o '{logdir}/%J.out'",
      "#BSUB -e '{logdir}/%J.err'"
   ],

   "serial": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '1'"
   ],

   "serialat": [
      "#BSUB -q '{queue}'",
      "#BSUB -m '{host}'",
      "#BSUB -n '1'"
   ],

   "singlehost": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts=1]'"
   ],

   "singlehostat": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -m '{host}'"
   ],

   "multihost": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts={nhost}]'"
   ],

   "multihostat": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -m '{hostlist}'"
   ],

   "envars": {
      "jobid": "$LSB_JOBID",
      "nproc": "$(echo $LSB_HOSTS | wc -w)",
      "hostlist": "$(printf '%s\\n' $LSB_HOSTS | uniq)"
   },
    
   "mpilauncher": {
      "openmpi": "openmpi-mpirun",
      "intelmpi": "impi-mpirun",
      "mpich": "mpich-mpirun"
   },

   "queued_states": {
      "PEND": "El trabajo {name} no se envió porque ya está en cola con número de trabajo {id}",
      "RUN": "El trabajo {name} no se envió porque ya está corriendo con número de trabajo {id}",
      "PSUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}",
      "USUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}",
      "SSUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}"
   },

   "ready_states": [
      "DONE",
      "EXIT"
   ],

   "warn_errors": [
      "Job <[0-9]+> is not found"
   ]

}

