{
   "submitcmd": [ "bsub" ],
   "statcmd": [ "bjobs", "-ostat", "-noheader" ],
   "idregex": "<([0-9]+)>",

   "naming": [
      "#BSUB -J '{jobname}'",
      "#BSUB -P '{progname}'"
   ],

   "logging": [
      "#BSUB -o '{logdir}/%J.out'",
      "#BSUB -e '{logdir}/%J.err'"
   ],

   "serial": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts={nhost}]'",
      "#BSUB -m '{hosts}'"
   ],

   "parallel": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts={nhost}]'",
      "#BSUB -m '{hosts}'"
   ],

   "parallelin": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts={nhost}]'",
      "#BSUB -m '{hosts}'"
   ],

   "parallelat": [
      "#BSUB -q '{queue}'",
      "#BSUB -n '{nproc}'",
      "#BSUB -R 'span[hosts={nhost}]'",
      "#BSUB -m '{hosts}'"
   ],

   "envars": {
      "jobid": "$LSB_JOBID",
      "nproc": "$(echo $LSB_HOSTS | wc -w)",
      "hosts": "$(printf '%s\\n' $LSB_HOSTS | uniq)"
   },
    
   "mpilauncher": {
      "openmpi": "openmpi-mpirun",
      "intelmpi": "impi-mpirun",
      "mpich": "mpich-mpirun"
   },
    
   "blocking_states": {
      "PEND": "El trabajo {name} no se envió porque ya está en cola con número de trabajo {id}",
      "RUN": "El trabajo {name} no se envió porque ya está corriendo con número de trabajo {id}",
      "PSUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}",
      "USUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}",
      "SSUSP": "El trabajo {name} no se envió porque está suspendido con número de trabajo {id}"
   },
    
   "ready_states": [
      "DONE",
      "EXIT"
   ]
}

