{
   "shortname": "g",
   "packagename": "Gaussian",
   "parallelib": "openmp",

   "conflicts": {
      "com and gjf": "No deben existir ambos archivos com y gjf",
      "not com and not gjf": "Debe existir un archivo com o gjf"
   },

   "defaults" : {
      "jobdir": "True"
   },

   "filekeys": {
      "com": "job.com",
      "gjf": "job.gjf",
      "modcom": "job.com",
      "modgjf": "job.gjf",
      "log": "job.log",
      "chk": "job.chk",
      "fchk": "job.fchk",
      "wfn": "job.wfn",
      "cub": "job.cub",
      "oldchk": "job.oldchk"
   },

   "filevars": {
      "com": "com",
      "gjf": "gjf",
      "chk": "chk",
      "fchk": "fchk",
      "oldchk": "oldchk"
   },

   "fileoptions": {
      "oldchk": "oldchk"
   },

   "inputfiles": [
      "com",
      "gjf",
      "oldchk"
   ],

   "outputfiles": [
      "log",
      "chk",
      "fchk",
      "wfn",
      "cub",
      "modcom",
      "modgjf"
   ],

   "interpolable": [
      "gjf",
      "com"
   ],

   "posargs": [
      "gjf|com"
   ],

   "export": {
      "GAUSS_SCRDIR": "."
   },

   "prescript": [
      "sed -i \"/^%/d\" @($gjf|$com)",
      "sed -i \"1i%Chk=$chk\\\\n%NProcShared=${nproc}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
      "sed -i \"/--Link1--/a%Chk=$chk\\\\n%NProcShared=${nproc}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
      "test -f $oldchk && sed -i \"1i%OldChk=$oldchk\" @($gjf|$com)"
   ],

   "interpolationkeywords": [
      "title",
      "method",
      "basis",
      "pseudo",
      "charge",
      "spin",
      "solvent"
   ]
}
