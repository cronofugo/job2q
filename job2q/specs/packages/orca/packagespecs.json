{
   "shortname": "orca",
   "packagename": "ORCA",
   "parallelib": "openmpi",
   "mpilaunch": "False",
   "stdoutput": "out",

   "conflicts": {
      "not inp": "Debe existir un archivo inp"
   },

   "defaults" : {
      "jobdir": "True"
   },

   "filekeys": {
      "inp": "job.inp",
      "out": "job.out",
      "opt": "job.opt",
      "xyz": "job.xyz",
      "trj": "job.trj",
      "gbw": "job.gbw",
      "prop": "job.prop",
      "engrad": "job.engrad",
      "property": "job_property.txt"
   },

   "filevars": {
      "inp": "inp"
   },

   "infiles": [
      "inp"
   ],

   "posargs": [
      "inp"
   ],

   "outfiles": [
      "inp",
      "gbw",
      "out",
      "opt",
      "xyz",
      "trj",
      "prop",
      "engrad",
      "property"
   ],

   "prescript": [
      "sed -i '/\\s*%pal\\s\\s*end/Id;1i'\"%pal nprocs $nproc end\" $inp"
   ]
}
