{
   "progkey": "G",
   "progname": "Gaussian",
   "parallelib": "openmp",
   "filecheck": "(gjf and not com) or (com and not gjf)",
   "defaults" : {
      "outdir": "{jobname}.{progkey}{version}"
   },
   "filekeys": {
      "com": "job.com",
      "gjf": "job.gjf",
      "log": "job.log",
      "chk": "job.chk",
      "fchk": "job.fchk",
      "wfn": "job.wfn",
      "cub": "job.cub",
      "oldchk": "job.oldchk"
   },
   "filevars": {
      "com": "com",
      "gjf": "gjf",
      "chk": "chk",
      "fchk": "fchk",
      "oldchk": "oldchk"
   },
   "realfiles": {
      "oldchk": "oldchk"
   },
   "inputfiles": [
      "gjf|com",
      "oldchk"
   ],
   "outputfiles": [
      "gjf|com",
      "log",
      "chk",
      "fchk",
      "wfn",
      "cub"
   ],
   "positionargs": [
      "gjf|com"
   ],
   "export": {
      "GAUSS_SCRDIR": "."
   },
   "prescript": [
      "sed -i \"/^%/d\" @($gjf|$com)",
      "sed -i \"1i%Chk=$chk\\\\n%NProcShared=${nproc}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
      "sed -i \"/--Link1--/a%Chk=$chk\\\\n%NProcShared=${nproc}\\\\n%Mem=${jobram}MB\" @($gjf|$com)",
      "test -f $oldchk && sed -i \"1i%OldChk=$oldchk\" @($gjf|$com)"
   ],
   "keywords": [
      "title",
      "method",
      "basis",
      "pseudo",
      "charge",
      "spin",
      "solvent"
   ]
}
